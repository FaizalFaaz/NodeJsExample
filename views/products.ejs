<% include partials/header.ejs %>
  <div id="imagebox-2">
    <% if( Order_complete) { %>
      <div class="alert alert-danger" role="alert"><%= Order_complete %></div>
    <% } %>
    <table width="100%" border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse;" >
      <tr>
        <td width="21%" align="left" valign="middle" bgcolor="#FFBB46" class="c-board"><strong>Our Products</strong></td>
        <td width="26%" align="left" valign="middle" bgcolor="#FFBB46" class="c-board"><strong>brand </strong></td>
        <td width="26%" align="left" valign="middle" bgcolor="#FFBB46" class="c-board"><strong>price </strong></td>
        <td width="31%" align="left" valign="middle" bgcolor="#FFBB46" class="c-board"><strong>Order now</strong></td>
        <td width="26%" align="left" valign="middle" bgcolor="#FFBB46" class="c-board"><strong>Update </strong></td>
        <td width="31%" align="left" valign="middle" bgcolor="#FFBB46" class="c-board"><strong>Delete</strong></td>
        </tr>

        <% products.forEach(function(product){ %>

      <tr>
        <td align="left" valign="middle" bgcolor="#FFFFFF" class="c-board"><%= product.productname %> </td>
        <td align="left" valign="middle" bgcolor="#FFFFFF" class="c-board"><%= product.brand %></td>
        <td align="left" valign="middle" bgcolor="#FFFFFF" class="c-board"><%= product.price %></td>
        <td align="left" valign="middle" bgcolor="#FFFFFF" class="c-board"><a class="confirmation" href="products/<%= product._id %>">order</a></td>
        <td align="left" valign="middle" bgcolor="#FFFFFF" class="c-board"><a class="confirmation" href="products/update/<%= product._id %>">Update</a></td>
          <td align="left" valign="middle" bgcolor="#FFFFFF" class="c-board"><a class="confirmation" href="products/deletep/<%= product._id %>">delete</a></td>

       </tr>
         <% }) %>
    </table>

<% include partials/footer.ejs %>
